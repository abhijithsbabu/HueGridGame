<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gmbg"
    tools:context=".transit">

    <ImageButton
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.8"
        android:background="@drawable/transitbg"
        app:layout_constraintWidth_percent="0.85" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="LEVEL\nCOMPLETE"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/celebrate"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="@id/container"
        app:layout_constraintRight_toRightOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <ImageButton
        android:id="@+id/homebtn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintLeft_toLeftOf="@id/container"
        app:layout_constraintBottom_toBottomOf="@id/container"
        android:background="@drawable/btn_color1"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        />

    <ImageButton
        android:id="@+id/nextbtn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintRight_toRightOf="@id/container"
        app:layout_constraintBottom_toBottomOf="@id/container"
        android:background="@drawable/btn_color1"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="@id/homebtn"
        app:layout_constraintBottom_toBottomOf="@id/homebtn"
        android:background="@drawable/home"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="@id/nextbtn"
        app:layout_constraintBottom_toBottomOf="@id/homebtn"
        android:background="@drawable/next"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>